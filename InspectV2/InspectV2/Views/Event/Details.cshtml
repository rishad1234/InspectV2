@model InspectV2.Models.Event
@{
    ViewBag.Title = "Details";
}

<div class="container section_space">
    <h3>
        @Model.Title
        <!-- <span><a href="#"><button type="button" class="btn btn-outline-dark float-right">Register For the
                    Event</button></a></span> -->
    </h3>
    <br>
    <div class="">
        <span class="e-date" style="display: inline-block;">
            <p>@Model.EventDate.ToString("ddd MMM, yyy")</p>
        </span>
        <span class="e-time" style="display: inline-block; margin-left:10px;">
            <p>@Model.EventTime</p>
        </span>
    </div>
    <p class="e-details">
        @Model.Body
        <a href="@Model.Link">Visit event page for more details</a>
    </p>
    <p class="e-seat">Allocated Seat Number: <b>@Model.SeatCount</b></p>
    <p class="e-seat">Location: <b>@Model.Location</b></p>

    <br><br>

</div>



<div id="particles-js" class="section_space text-center">
    <div class="Contact_info">
        <h1>TechHappens</h1>
        <ul>
            <li><a href="#"><i class="fab fa-facebook-f"></i></a></li>
            <li><a href="#"><i class="fab fa-instagram"></i></a></li>
            <li><a href="#"><i class="fab fa-twitter"></i></a></li>
        </ul>
    </div>
</div>