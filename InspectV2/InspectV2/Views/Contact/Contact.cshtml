@using InspectV2.Models
@model Contact
@{
    ViewBag.Title = "Contact";
    var SponsoredCount = 0;
}

<div class="container section_space">
    <div class="row">
        <div class="col-md-7">
            <h2 class="news_heading">
                Contact Us
            </h2>

            @using (Html.BeginForm("Create", "Contact", FormMethod.Post, new { @class = "contact-form" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group">
                    <label for="">Enter Name</label>
                    @Html.TextBoxFor(m => m.Username, new { placeholder = "Enter Name", @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
                </div>


                <div class="form-group">
                    <label for="">Enter email</label>
                    @Html.TextBoxFor(m => m.Email, new { placeholder = "Enter Email", @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                </div>

                <div class="">
                    <label for="">Enter your message</label>
                    <br>
                    @Html.TextAreaFor(m => m.Message, new { placeholder = "Enter Message", @class = "" })
                    @Html.ValidationMessageFor(m => m.Message, "", new { @class = "text-danger" })
                </div>

                <button type="submit" class="btn btn-outline-dark mt-3 mb-5">Send Mail</button>

            }

            <h3 class="news_heading">
                Contact Us In Social Media
            </h3>
            <div class="row mt-3">
                <div class="col-md-4">
                    <div class="eachCategories socialCat">
                        <a href="#">Facebook</a>

                    </div>
                </div>
                <div class="col-md-4">
                    <div class="eachCategories socialCat">
                        <a href="#">Instagram</a>

                    </div>
                </div>
                <div class="col-md-4">
                    <div class="eachCategories socialCat">
                        <a href="#">Twitter</a>

                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-5">
            <h2 class="news_heading">
                Sponsored Post
            </h2>
            <br />
            <div class="sponsored">
                @foreach (var news in ViewData["News"] as List<News>)
                {
                    if (news.Sponsor.SponsorShip == "True" && SponsoredCount != 3)
                    {
                        <div class="each_sponsor">
                            <img src="~/Content/images/@news.Image" alt="">
                            <br />
                            <a class="sponsor_link_home" href="/newsdetails/@news.Id">
                                <h5>@news.Title </h5>
                            </a>


                            <p>
                                @news.Excerpt <span>
                                    <a href="/newsdetails/@news.Id">
                                        More
                                    </a>
                                </span>
                            </p>
                            <hr>
                        </div>
                        SponsoredCount++;
                    }

                }
            </div>
        </div>
    </div>
</div>




<div id="particles-js" class="section_space text-center">
    <div class="Contact_info">
        <h3>TechHappens</h3>
        <ul>
            <li><a href="#"><i class="fab fa-facebook-f"></i></a></li>
            <li><a href="#"><i class="fab fa-instagram"></i></a></li>
            <li><a href="#"><i class="fab fa-twitter"></i></a></li>
        </ul>
    </div>
</div>